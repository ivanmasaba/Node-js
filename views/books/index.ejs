<h2 class="page-header">Search books</h2>

<form action="/books" method="get">
  <div class="form-row">
    <div class="form-item">
        <label for="name">Title</label>
        <input type="text" name="title" value="<%=searchOptions.title%>" >
    </div>
  </div>
   
  <div class="form-row">
    <div class="form-item">
        <label for="name">Published After</label>
        <input type="date" name="publishedAfter" value="<%=searchOptions.publishedAfter%>" >
    </div>

    <div class="form-item">
        <label for="name">Published Before</label>
        <input type="date" name="publishedBefore" value="<%=searchOptions.publishedBefore%>" >
    </div>

    </div>

    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
    
</form>

<br>
<div>
    <% if ( books.length > 0 ) { %>
 
        <% books.forEach( book => { %> 
           <a href="/books/<%= book.id %> ">
            <img height="150" width="100" src="<%= book.coverImagePath %> " alt="">  
           </a>
            <% } ) %> 
        
        <% }else{ %> 
            <div> No Books found...  </div>
        <% } %> 
</div>
