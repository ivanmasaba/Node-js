<h2 class="page-header">Recently Added</h2>

<div>
    <% if ( books.length > 0 ) { %>
 
        <% books.forEach( book => { %> 
        
            <a href="/books/<%= book.id %> ">
                 <img height="150" width="100" src="<%= book.coverImagePath %> " > 
                </a>
            <% } ) %> 
        
        <% }else{ %> 
            <div> No Books found...  </div>
        <% } %> 
</div>