<h2 class="page-header">Search authors</h2>

<form action="/authors" method="get">
    <label for="name">Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>" >
    <button type="submit">Search</button>
</form>

<br>

<% if ( authors.length > 0 ) { %>
 
<% authors.forEach( author => { %> 

    <div> 
        <%= author.name %> 
    </div>
    <div class="btn-row">
        <a class="btn btn-primary" href="/authors/<%= author.id %> ">View author</a>
        <a class="btn btn-primary" href="/authors/<%= author.id %>/edit">Edit author</a>

        <%- include('../partials/deleteForm', { url: `/authors/${author.id}` }) %> 
   </div>
    <% } ) %> 

<% }else{ %> 
    <div> No Authors found...  </div>
<% } %> 